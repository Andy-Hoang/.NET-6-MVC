@model Product             //As there is NO model passed from Controller to View(), we can bind whatever model we want here inside View()

<form method="post" asp-action="DeletePost">		<!-- define what action (function) to submit to-->
	<div class="border p-3 my-5">
		<div class="row pb-2">
			<h2 class="text-primary"> Delete Product</h2>
			<hr />
		</div>
		<input asp-for="Id" hidden />		<!-- need this to submit Id when Delete btn clicked | otherwise will submit null as other input fields are diabled -->

		<div class="mb-3">
			<label asp-for="Title"></label>		
			<input asp-for="Title" disabled class="form-control" />
		</div>
		<div class="mb-3">
			<label asp-for="Author"></label>		
			<input asp-for="Author" disabled class="form-control" /> 
		</div>
		<div class="mb-3">
			<label asp-for="Description"></label>		
			<input asp-for="Description" disabled class="form-control" /> 
		</div>
		<div class="mb-3">
			<label asp-for="ISBN"></label>		
			<input asp-for="ISBN" disabled class="form-control" /> 
		</div>
		<div class="mb-3">
			<label asp-for="ListPrice"></label>		
			<input asp-for="ListPrice" disabled class="form-control" /> 
		</div>
		<div class="mb-3">
			<label asp-for="Price"></label>		
			<input asp-for="Price" disabled class="form-control" /> 
		</div>
		<div class="mb-3">
			<label asp-for="Price50"></label>		
			<input asp-for="Price50" disabled class="form-control" /> 
		</div>
		<div class="mb-3">
			<label asp-for="Price100"></label>		
			<input asp-for="Price100" disabled class="form-control" /> 
		</div>

		<button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
		<a asp-controller="Product" asp-action="Index" class="btn btn-secondary" style="width:150px">
			Back to List
		</a>
		
	</div>
</form>

<!-- Because _ValidationScriptsPartial.cshtml includes 'script' so need to add it inside 'Scripts' section -->
@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}


