@model IEnumerable<Product>    //the 'model' that passed in View() from ProductController, with type: 'IEnumerable<Product>'


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Product
            </a>
        </div>
    </div>
</div>
<br />

<table id="tblData" class="table table-bordered table-striped my-5" style="width:100%" >         <!-- set id so js script can find/ target-->
    <thead>
        <tr>
            <th>Title</th>
            <th>ISBN</th>
            <th> Price</th>
            <th>Author</th>
            <th>Category</th>
            <th></th>
        </tr>
    </thead>
</table>

@section Scripts{
    <script src="~/js/product.js"></script>    <!-- //add custom js file contain ajax datatables  -->
}

